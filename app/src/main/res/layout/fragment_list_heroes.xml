<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".heroes.heroeslist.ListHeroesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHeroesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="9"
        tools:listitem="@layout/hero_item2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbRecovery"
        android:backgroundTint="@color/red"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_margin="24dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="28dp"
        android:src="@mipmap/ic_healing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/recargar" />

</androidx.constraintlayout.widget.ConstraintLayout>